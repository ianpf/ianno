{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier", "../../tslint.json"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "callable-types": [false]
  }
}
